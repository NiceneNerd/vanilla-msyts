            - 1
            - 9
      - text: Ti ringrazio per ciò che hai detto!
      - control:
          kind: pause
          frames: 20
      - text: "\nLo apprezzo molto, davvero."
  talk07:
    attributes: Npc_Zora003
    contents:
      - control:
          kind: sound
          unknown:
            - 5
            - 4
      - text: "Link, se dovessi mai trovarti nei guai,"
      - control:
          kind: pause
          frames: 20
      - text: "\nti prego, torna qui da noi.\n\n"
      - control:
          kind: sound
          unknown:
            - 1
            - 1
