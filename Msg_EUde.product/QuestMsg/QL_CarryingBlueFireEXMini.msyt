group_count: 5
atr1_unknown: 0
entries:
  QL_CarryingBlueFireEXMini_Camera:
    contents: []
  QL_CarryingBlueFireEXMini_Carry:
    contents:
      - text: "Du hast die blaue Flamme verwendet, um die\nFeuerschale zu entzünden. Der Leitstein\ndes Hateno-Instituts scheint nun wieder\nzu funktionieren.\n\n"
      - control:
          kind: set_colour
          colour: red
      - text: Berichte im Institut davon
      - control:
          kind: reset_colour
      - text: " und lasse deinen\nShiekah-Stein reparieren."
  QL_CarryingBlueFireEXMini_Desc:
    contents:
      - text: "Impa zufolge ist der Shiekah-Stein, den Zelda\nzurückgelassen hat, um dir den Weg zu weisen,\nnicht komplett...\n\nDie "
      - control:
          kind: set_colour
          colour: red
      - text: Forscher
      - control:
          kind: reset_colour
      - text: " des Hateno-Instituts in Hateno\nsollen vieles über den Shiekah-Stein wissen.\n\nVerwende die Karte, um den Ort zu finden,\nund statte dem Institut einen Besuch ab."
  QL_CarryingBlueFireEXMini_Finish:
    contents:
      - text: "Du hast Impa davon berichtet, dass nun alle\nBasismodule des Shiekah-Steins wiederher-\ngestellt sind!\n\nDie Fotos im Album zeigen Zeldas Erinnerungen\nvon vor 100 Jahren.\n\nBesuche die Orte, an denen Zelda vor\n100 Jahren war, und gewinne so dein\nGedächtnis zurück!"
  QL_CarryingBlueFireEXMini_Fired:
    contents:
      - text: "Purah hat den Shiekah-Stein für dich repariert.\nNun kannst du alle seiner vor 100 Jahren\ninstallierten "
      - control:
          kind: set_colour
          colour: red
      - text: Basismodule
      - control:
          kind: reset_colour
      - text: " nutzen.\n\nProbiere eines davon, das "
      - control:
          kind: set_colour
          colour: red
      - text: Fotomodul
      - control:
          kind: reset_colour
      - text: ", aus,\nindem du ein Foto von Purah aufnimmst!"
  QL_CarryingBlueFireEXMini_Name:
    contents:
      - text: Zeldas Vermächtnis
  QL_CarryingBlueFireEXMini_Permit:
    contents:
      - text: "Der Direktorin des Hateno-Instituts, Purah,\nzufolge rührt sich der Leitstein nicht. Daher\nkann auch der Shiekah-Stein nicht repariert\nwerden. Wenn die Feuerschale vor dem Institut\nmit der blauen Flamme entzündet wird, sollte\nder Leitstein wieder funktionieren.\n\nHole die "
      - control:
          kind: set_colour
          colour: red
      - text: blaue Flamme
      - control:
          kind: reset_colour
      - text: " vom Flammenborn in\nHateno und entzünde mit ihr die "
      - control:
          kind: set_colour
          colour: red
      - text: Feuerschale
      - control:
          kind: reset_colour
      - text: "."
  QL_CarryingBlueFireEXMini_Repaired:
    contents:
      - text: "Du hast erfolgreich das Fotomodul verwendet,\num ein Foto von Purah aufzunehmen!\n\nPurah zufolge befinden sich im Album bereits\nFotos aus der Vergangenheit.\n\nWas könnte das bedeuten?\nFrag doch mal "
      - control:
          kind: set_colour
          colour: red
      - text: Impa
      - control:
          kind: reset_colour
      - text: " in Kakariko!"
