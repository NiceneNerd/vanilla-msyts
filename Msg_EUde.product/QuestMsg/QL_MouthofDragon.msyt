          colour: red
      - text: Schuppe
      - control:
          kind: reset_colour
      - text: "\ndes goldenen Geistes "
      - control:
          kind: set_colour
          colour: red
      - text: "Farodra "
      - control:
          kind: reset_colour
      - text: "dar.“\n\nWoher bekommt man wohl so eine "
      - control:
          kind: set_colour
          colour: red
      - text: Schuppe
      - control:
          kind: reset_colour
      - text: "?"
