entries:
  QL_BalladOfHeroZora_Desc:
    contents:
      - text: "Der Zerstörer führt dich zu einem Monument,\ndas dir den Weg zu Prüfungen weist. Zwischen\nKashiwas Lied und diesen Prüfungen scheint\neine Verbindung zu bestehen:\n„Es gilt, "
      - control:
          kind: set_colour
          colour: red
      - text: "auf dem Pfad des Lichts zu\nwandeln"
      - control:
          kind: reset_colour
      - text: "...\nEs gilt, "
      - control:
          kind: set_colour
          colour: red
      - text: "im Angesichts uralter Feinde\nbeherzt zu handeln"
      - control:
          kind: reset_colour
      - text: "...\nEs gilt, "
      - control:
          kind: set_colour
          colour: red
      - text: "durch der Wasserfälle Lichtringe\nzu jagen"
      - control:
          kind: reset_colour
      - text: "...“\nNoch zu bestehende Prüfungen: "
      - control:
          kind: set_colour
          colour: red
      - text: "3"
      - control:
          kind: reset_colour
  QL_BalladOfHeroZora_Finish:
    contents:
      - text: "Du hast die Illusion von Ganons Wasserfluch\nbesiegt, die aus deinen eigenen Erinnerungen\nentstanden war.\n\nKashiwas Lied, "
      - control:
          kind: set_colour
          colour: red
      - text: Miphas Ballade
      - control:
          kind: reset_colour
      - text: ", ist so\nbewegend, dass du dich in die Ereignisse von\nvor 100 Jahren zurückversetzt fühlst.\n\nDas Bestehen der Prüfung hat deine\nheilige Kraft und damit auch "
      - control:
          kind: raw
          two_hundred_one:
            dynamic:
              - 0
              - len: 4
                field_2:
                  - 3
                  - 4
                  - 4
                  - 0
      - text: "Miphas Gebet\ngestärkt."
  QL_BalladOfHeroZora_Name:
    contents:
      - text: "EX: Die Ballade von Mipha"
